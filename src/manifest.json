{
  "manifest_version": 3,
  "name": "FavØrits",
  "description": "Extension pour trier vos accès aux sites-web",
  "version": "1.0",

  "action": {
    "default_icon": {
      "16": "images/stop-16.png",
      "32": "images/stop-32.png",
      "64": "images/stop-64.png"
    }
  },

  "background": {
    "service_worker" : "background.js"
  },

  "icons": {
        "64": "images/stop-64.png"
    },

    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "css": ["styles.css"],
        "js": ["script.js"]
      }
    ]
}

